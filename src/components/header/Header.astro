---
import { Image } from "astro:assets";
import fundacioBMGLogo from "@assets/logos/fundacio-balonmano-granollers-logo.svg";
import Button from "@components/buttons/Button.astro";
import HeaderMenuButton from "@components/header/HeaderMenuButton.astro";
import HeaderMenu from "@components/header/HeaderMenu.astro";
---


<script src="/src/scripts/headerMenuScript.ts"></script>

<div class="header-container">
  <header class="global-opposite-colors">
    <HeaderMenuButton />

    <a
      class="logo-container"
      href="/"
      aria-label="Ves a la pàgina principal de la fundació del Balonmano Granollers"
    >
      <Image
        class="logo"
        src={fundacioBMGLogo}
        loading="eager"
        alt="Logo de la fundació del Balonmano Granollers"
      />
    </a>

    <div class="header-button">
      <Button slug="https://bmgranollers.cat/cat" text="BM. Granollers" newTab />
    </div>

    <HeaderMenu />
  </header>
</div>

<style>
  .header-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 2;
    /* z-index: -2;
    animation: z-index 0.6s 1000ms ease-in-out forwards; */
    transition: transform 0.3s ease;
  }

  .header-container.header--hidden {
    transform: translateY(-100%);
  }

  @keyframes z-index {
    100% {
      z-index: 2;
    }
  }

  header {
    --logo-width: 177px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: calc(100% - (2 * var(--space-x-m)));
    height: calc(var(--hg-header) * 1rem);
    margin-inline: var(--space-x-m);
    padding-inline: var(--space-x-sm);
    border-bottom-left-radius: var(--radius-regular);
    border-bottom-right-radius: var(--radius-regular);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.16);
  }

  .logo-container {
    display: flex;
    justify-content: center;
  }

  @media (width < 800px) {
    header {
      height: calc(var(--hg-header-sm) * 1rem);
      padding-inline: var(--space-x-xl);
    }

    .logo {
      width: calc((var(--hg-header-sm) / var(--hg-header)) * 100%);
      height: auto;
    }
  }

  @media (width >= 640px) {
    .logo-container {
      position: absolute;
      left: calc(50% - (var(--logo-width) / 2));
    }
  }

  @media (width < 640px) {
    .header-button {
      display: none;
    }

    .logo-container {
      justify-content: end;
    }
  }
</style>