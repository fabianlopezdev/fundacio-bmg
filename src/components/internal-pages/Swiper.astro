---
import "swiper/css";
import "swiper/css/effect-cards";

import { Image } from "astro:assets";

import LeftArrow from "@assets/arrows/Left-arrow.astro";
import RightArrow from "@assets/arrows/Right-arrow.astro";

const { imagesArr } = Astro.props;
---

<script src="/src/scripts/swiperScript.ts"></script>

<div class="swiper-container-wrapper">
  <div class="swiper">
    <div class="swiper-wrapper">
      {
        [...imagesArr, ...imagesArr].map((image, index) => {
          const originalArrayLength = imagesArr.length * 2;
          const isEagerLoad = index < 2 || index === originalArrayLength - 1;

          return (
            <div class="swiper-slide">
              <div class="image-container">
                <Image
                  class="swiper-slide-image"
                  src={image.img}
                  alt={image.imgAlt}
                  loading={isEagerLoad ? "eager" : "lazy"}
                />
                {/* Hover details and tap indicator removed until details content is available
                <div class="tap-indicator">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="tap-icon"
                  >
                    <line x1="12" y1="5" x2="12" y2="19" />
                    <line x1="5" y1="12" x2="19" y2="12" />
                  </svg>
                </div>
                <div class="hover-details">
                  <p class="details-text">{image.details}</p>
                </div>
                */}
              </div>
            </div>
          );
        })
      }
    </div>

    <div class="swiper-controls">
      <button
        class="swiper-prev"
        aria-label="BotÃ³ per moure les imagtges a l'esquerre del carrusel"
      >
        <LeftArrow />
      </button>
      <button class="swiper-next">
        <RightArrow />
      </button>
    </div>
  </div>
</div>

<style>
  /* Base styles */
  .swiper-container-wrapper,
  .swiper,
  .swiper-wrapper,
  .swiper-slide {
    -webkit-tap-highlight-color: transparent;
    touch-action: pan-y pinch-zoom;
  }

  .swiper-container-wrapper {
    max-width: 100vw;
    padding-bottom: var(--space-y-page-section);
    background-color: var(--clr-secondary);
  }

  .swiper-slide {
    width: var(--slide-width);
    aspect-ratio: 593 / 343;
    height: 21.4375rem;
    overflow: hidden;
  }

  .image-container {
    position: relative;
    width: 100%;
    height: 100%;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    outline: none;
  }

  /* Hover details styles commented out until content is available
  .hover-details {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(34, 60, 193, 0.85);
    color: var(--clr-secondary);
    padding: 1.1875rem;
    transform: translateY(100%);
    transition: transform 0.3s ease-in-out;
    font-size: 0.875rem;
    letter-spacing: 0.0004rem;
  }

  .tap-indicator {
    position: absolute;
    bottom: 0.5rem;
    right: 0.5rem;
    display: none;
    width: 1.5rem;
    height: 1.5rem;
    color: var(--clr-secondary);
    background-color: rgba(34, 60, 193, 0.85);
    padding: 0.25rem;
    border-radius: 1rem;
    z-index: 1;
  }

  .tap-icon {
    width: 100%;
    height: 100%;
    animation: scaleIcon 1s ease-out 2;
    transform-origin: center;
  }

  .tap-indicator.hidden {
    display: none !important;
  }

  .details-text {
    margin: 0;
    font-size: clamp(0.755rem, 0.138rem + 2.743vi, 0.875rem);
    line-height: 1.4;
  }
  */

  .swiper-controls {
    width: 100%;
    display: flex;
    justify-content: center;
    gap: 1.75rem;
    padding-top: 2.75rem;
  }

  .swiper-slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: bottom;
  }

  /* Hover and touch interactions commented out until details content is available
  @media (hover: hover) {
    .image-container:hover .hover-details {
      transform: translateY(0);
    }
  }

  .image-container.active .hover-details {
    transform: translateY(0);
  }

  @keyframes scaleIcon {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
    100% {
      transform: scale(1);
    }
  }

  @media (hover: none) {
    .image-container:not(.active) .tap-indicator {
      display: flex;
    }

    .image-container.touched .tap-indicator {
      display: none;
    }
  }
  */

  @media (width < 710px) {
    .swiper-slide {
      width: 85vw;
      height: auto;
      aspect-ratio: 593 / 343;
    }

    .swiper-slide-image {
      width: 100%;
      height: 100%;
    }
  }
</style>