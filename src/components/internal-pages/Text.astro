---
const { sectionId, textTitle, textContent, contrast } = Astro.props;
---

<section
  id={sectionId ? sectionId : ""}
  class=`${contrast ? "global-colors" : ""} text-container`
>
  <h2 class=`${contrast ? "global-clr-accent" : ""} text-title`>{textTitle}</h2>
  <p style={`color: ${contrast ? 'var(--clr-secondary)' : '#000000'}`} >
    {
      textContent.map((paragraph: string, i: number) =>
        i !== textContent.length - 1 ? (
          <>
            {paragraph}
            <br />
            <br />
          </>
        ) : (
          paragraph
        ),
      )
    }
  </p>
</section>

<style>
  .text-container {
    max-width: 1516px;
    padding-inline: var(--space-x-xl);
    padding-block: 6.625rem;
    margin-inline: auto;
    color: var(--clr-primary);
    display: flex;
    gap: clamp(1rem, -12.499rem + 22.735vi, 9rem);
  }

  .text-title {
    min-width: 10ch;
    letter-spacing: -0.1rem;
  }

  p {
    font-size: clamp(1.125rem, 1.043rem + 0.351vi, 1.375rem);

    text-wrap: balance;
  }

  @media (width < 950px) {
    .text-container {
      flex-direction: column;
    }

    .text-title {
      text-align: center;
    }
  }
</style>
