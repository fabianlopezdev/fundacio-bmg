import { JSDOM } from "jsdom";
import fs from "node:fs";

// Suppose you have a predefined list of countries that need a different fill color
const highlightedCountries = [
  "Andorra",
  "Austria",
  "Belgium",
  "Bosnia",
  "Bulgaria",
  "Croatia",
  "Czechia",
  "Denmark",
