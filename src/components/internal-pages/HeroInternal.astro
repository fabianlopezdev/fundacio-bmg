---
import { Image } from "astro:assets";
import HeroNavigatorContainer from "@components/internal-pages/HeroNavigatorContainer.astro";

const { title, heroImage, sectionsLabels } = Astro.props;
console.log("sectionsLabels", sectionsLabels);

// Split the title into words
const titleWords = title.split(' ');

// Calculate the total time needed for all words to appear
const lastWordTiming = (titleWords.length - 1) * 300;

// If the last word appears before 2500ms, pad the delay to match 2500ms
// If the last word appears after 2500ms, add 200ms buffer after last word
const totalDelay = Math.max(1500, lastWordTiming + 200);
---

<section id="hero" style={`--total-delay: ${totalDelay}ms`}>
  <div class="hero-text">
    <h1 class="h1-internal-page">
      {titleWords.map((word, index) => (
        <span 
          class="animated text" 
          style={`--delay: ${index * 300}ms`}
        >
          {word}
        </span>
      ))}
    </h1>
  </div>

    {
      sectionsLabels?.length && (
        <HeroNavigatorContainer sectionsLabels={sectionsLabels} />
      )
    }

  {
    heroImage && (
      <Image
        class="hero-image"
        src={heroImage.heroImageSrc}
        alt={heroImage.heroImageAlt}
      />
    )
  }
</section>

<style>
  #hero {
    line-height: 0;
  }

  .h1-internal-page {
    color: var(--clr-accent);
    background-color: var(--clr-primary);
    font-weight: var(--fnt-wg-regular);
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .text {
    opacity: 0;
    transform: translateY(50%);
    display: inline-block;
  }

  .text.animated {
    animation: animate-lines 0.6s var(--delay, 0ms) cubic-bezier(0, 0, 0.58, 1.2) forwards;
  }

  @keyframes animate-lines {
    0% {
      opacity: 0;
      transform: translateY(50%);
    }
    1% {
      opacity: 1;
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: bottom;
    aspect-ratio: 1512 / 751;
  }

  .hero-text {
    height: 100dvh;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    animation: all-height 0.6s var(--total-delay) ease-in-out forwards;
    background-color: var(--clr-primary);
    margin-top: calc(var(--hg-header) * -1rem);
  }

  @keyframes all-height {
    100% {
      margin-top: 0rem;
      height: auto;
      height: calc-size(auto);
    }
  }

  @media (width < 769px) {
    .h1-internal-page {
      gap: 0.25rem;
    }
  }
</style>