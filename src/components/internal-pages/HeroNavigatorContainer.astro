---
import ButtonInternalPage from "@components/buttons/ButtonInternalPage.astro";
import { slugify } from "@utils/index";

const { sectionsLabels } = Astro.props;
---

<nav class="hero-navigation-container">
  <ul class="nav-buttons-container">
    {
      sectionsLabels.map((label: string) => (
        <li>
          <ButtonInternalPage text={label} slug={`#${slugify(label)}`} />
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .hero-navigation-container {
    background-color: var(--clr-secondary);
    padding-inline: var(--space-x-xl);
    padding-block: 3.3125rem;
  }

  li {
    display: flex;
  }

  .nav-buttons-container {
    display: flex;
    gap: 1.1875rem;
    flex-wrap: wrap;
  }
</style>
