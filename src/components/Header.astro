---
import { Image } from "astro:assets";
import Button from "@components/Button.astro";
import fundacioBMGLogo from "@assets/fundacio-balonmano-granollers-logo.webp";
import mobileButton from "@assets/mobile-menu-icon-fundacio-balonamno-granollers.png";
---
<script>
  const menuToggle = document.querySelector('button');
const menu = document.querySelector('.menu');
const backdrop = document.querySelector('.backdrop');


menuToggle?.addEventListener('click', () => {
  const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
  menuToggle.setAttribute('aria-expanded', `${!isExpanded ? "true" :"false"}`);
  menu?.setAttribute('aria-hidden', `${!isExpanded ? "true" :"false"}`);
  backdrop?.setAttribute('aria-hidden', `${!isExpanded ? "true" :"false"}`);
  menu?.classList.toggle('active');
  backdrop?.classList.toggle('active');
});
</script>
<header>
  <button>
    <Image
      src={mobileButton}
      alt="Icona que obre el menú de pàgines de la web de la fundació del Balonmano Granollers"
    />
    <span>Menú</span>
  </button>
  <a
    class="logo-container"
    href="/"
    aria-label="Ves a la pàgina principal de la fundació del Balonmano Granollers"
  >
    <Image
      class="logo"
      src={fundacioBMGLogo}
      alt="Logo de la fundació del Balonmano Granollers"
    />
  </a>

  <div class="header-button">
    <Button slug="https://bmgranollers.cat/cat" text="BM. Granollers" newTab />
  </div>

  <aside class="menu" aria-hidden="true"></aside>
  <div class="backdrop" aria-hidden="true"></div>
</header>

<style>
  header {
    --logo-width: 177px;
    --logo-height: 59px;
    --header-height: 5.875;
    --header-height-sm: 4.099375;
    --header-radius: 2.5rem;

    display: flex;
    align-items: center;
    justify-content: space-between;
    height: calc(var(--header-height) * 1rem);
    margin-inline: var(--space-x-m);
    padding-inline: var(--space-x-sm);
    background-color: var(--clr-secondary);
    color: var(--clr-primary);
    border-bottom-left-radius: var(--header-radius);
    border-bottom-right-radius: var(--header-radius);

  }

  .logo-container {
    display: flex;
    justify-content: center;
  }
  button {
    z-index: 9999;
  }
  button span {
    display: inline-block;
    padding-left: 0.4375rem;
  }

  .menu {
    position: fixed;
    top: 0;
    left: 0;
    height: 100dvh;
    width: 83vw;
    max-width: 38.75rem;
    background-color: #e9e9e9;
    z-index: 2;
    border-top-right-radius: var(--header-radius);
    border-bottom-right-radius: var(--header-radius);
    transform: translateX(-100%); /* Hide off-screen to the left */
  transition: transform 0.3s ease-in-out;
  pointer-events: none; /* Disable interactions */
  }


.backdrop {
position: fixed;
  top: 0;
  left: 0;
  z-index: 1; /* Should be less than the menu's z-index */
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0; /* Invisible initially */
  transition: opacity 0.3s ease-in-out;
  pointer-events: none;
}


.menu.active {
  transform: translateX(0); /* Slide in */
  pointer-events: auto;
}

.backdrop.active {
  opacity: 1; /* Fade in */
  pointer-events: auto; /* Enable interactions*/
}

  @media (width < 800px) {
    header {
      height: calc(var(--header-height-sm) * 1rem);
    }

    .logo {
      width: calc((var(--header-height-sm) / var(--header-height)) * 100%);
      height: auto;
    }
  }

  @media (width >= 640px) {
    .logo-container {
      position: absolute;
      left: calc(50% - (var(--logo-width) / 2));
    }
  }

  @media (width < 640px) {
    .header-button {
      display: none;
    }

    .logo-container {
      justify-content: end;
    }
  }
</style>
